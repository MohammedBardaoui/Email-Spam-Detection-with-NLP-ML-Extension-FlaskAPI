{
  "manifest_version": 3,
  "name": "Gmail Content Test",
  "version": "1.0",
  "description": "A Chrome extension that extracts Gmail content and sends it to an NLP spam detection API.",

  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
